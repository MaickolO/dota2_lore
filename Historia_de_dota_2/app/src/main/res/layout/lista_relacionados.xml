<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_relacionados"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardElevation="2dp"
    app:cardCornerRadius="30dp"
    android:background="@color/mainBackground"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBackground"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:layout_marginBottom="10dp"
            android:background="@color/mainBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lista_relacionado_img"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:src="@drawable/perfil_legion_commander" />

            <TextView
                android:id="@+id/lista_pr_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Splyn, Span y Stonk"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/PrimaryMain"
                />

            <TextView
                android:id="@+id/lista_sc_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catedral de Rumusque"
                android:textSize="8sp"
                android:gravity="center"
                android:textColor="@color/PrimaryMain"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>