<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_mundo"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardCornerRadius="25dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lista_foto_mundo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/mad_moon" />

                <TextView
                    android:layout_marginTop="35dp"
                    android:id="@+id/lista_espanol_mundo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catedral de Rumusque"
                    android:textSize="20sp"
                    style="@style/ShadowText"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_marginTop="95dp"
                    android:id="@+id/lista_ingles_mundo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cathedral of Rumusque"
                    style="@style/ShadowText"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>